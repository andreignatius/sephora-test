<% provide(:title, 'All products') %>
<h1>All products</h1>

<%= will_paginate %>

<ul class="products">
    <% @products.each do |product| %>
        <li>
            <%= gravatar_for_product product, size: 50 %>
            <%= link_to product.name, product %>
        </li>
    <% end %>
</ul>

<%= will_paginate %>