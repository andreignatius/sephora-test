<% provide(:title, 'Add New Product') %>
<h1>Add New Product</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@product) do |f| %>
            <%= render 'error_messages' %>
            
            <%= f.label :name %>
            <%= f.text_field :name %>
            
            <%= f.label :description %>
            <%= f.text_field :description %>
            
            <%= f.label :price %>
            <%= f.text_field :price %>
            
            <%= f.submit "Insert new product", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
